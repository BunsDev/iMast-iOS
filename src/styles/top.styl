section
    min-height: 40vh;
    display: flex;
    align-items: center;
    padding: 3em 0;
    &:nth-child(even)
        background: #f8f8f8;

.one-word
    white-space: nowrap
.one-long-word
    @media (min-width: 20em)
        white-space: nowrap
.wbr
    &:after
        display: inline-block
        white-space: normal
        content: " "
        width: 0
.block-center
    display: flex
    align-items: center
    justify-content: center

#top
    min-height: 50vh

.app-info
    display: inline-block;
    max-width: 320px
    .app-icon
        border: 1px solid rgba(0,0,0,0.1);
        border-radius: 20%;
        width: 100%
        max-width: 120px
    .appstore
        height: 50px


.col-md-8 > p
    max-width: 25em;

h2
    word-break: keep-all;

#infocontent img
    max-width: 80%;
    max-height: 20em;

footer
    width: 100%;
    background: #eee;
    .container div
        padding: calc(30px - 0.5em) 0;
img, video
    max-width: 80%;
